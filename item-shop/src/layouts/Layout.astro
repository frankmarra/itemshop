---
// export interface Props {
//   title: string
//   pageDescription: string[]
// }
import Typewriter from '../components/Typewriter'
import MovingPicture from '../components/MovingPicture'

const { title, pageDescription } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script
      src="https://kit.fontawesome.com/ae0d597aae.js"
      crossorigin="anonymous"
    ></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-wrapper">
      <div class="container">
        <ul class="social-links">
          <li>
            <a
              href="https://github.com/frankmarra"
              target="_blank"
              id="github"
              aria-label="github"
              ><i class="fa-brands fa-github"></i>
            </a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/frankrmarra/"
              target="_blank"
              id="linkedin"
              aria-label="linkedin"
              ><i class="fa-brands fa-linkedin"></i>
            </a>
          </li>
          <li>
            <a
              href="mailto:frankrmarra@gmail.com"
              target="_blank"
              id="email"
              aria-label="email"
              ><i class="fa-solid fa-envelope"></i>
            </a>
          </li>
        </ul>
      </div>

      <div class="container content">
        <slot />
      </div>

      <div class="profile-pic-stats">
        <div class="container profile-pic">
          <MovingPicture pageDescription={pageDescription} client:load />
        </div>
        <div class="container stats">
          <p>
            Frank Marra
            <br />
            Software Engineer
          </p>
        </div>
      </div>
      <nav class="container nav">
        <ul>
          <li>
            <a href="/about/">About</a>
          </li>
          <li><a href="/projects/">Projects</a></li>
          <li><a href="/resume/">Resume</a></li>
        </ul>
      </nav>
      <div class="container page-description">
        <Typewriter pageDescription={pageDescription} client:load />
      </div>
    </div>

    <style>
      @font-face {
        font-family: retroGaming;
        src: url('/fonts/Retro Gaming.ttf');
      }
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: #f8fcf8;
        --color-bg: hsl(10, 21%, 95%);
        --color-border: hsl(17, 24%, 90%);
      }

      html {
        font-family: retroGaming, system-ui, sans-serif;
        font-size: var(--font-size-base);
        background-color: var(--color-bg);
      }

      body {
        margin: 0;
        background-image: url('/assets/map001.png');
        background-repeat: no-repeat;
        background-size: cover;
        height: 100vh;
      }

      .page-wrapper {
        display: grid;
        grid-template-columns: 1fr 2fr;
        justify-items: center;
        align-items: center;
      }

      .container {
        margin-block: 1.5vh;
        border: 5px ridge #aeb3ae;

        background-color: #002460;
        color: var(--color-text);
        z-index: 1;
      }

      .social-links {
        display: flex;
        flex-flow: row nowrap;
        margin: 1vh 0;
      }

      .social-links li {
        font-size: 1.2rem;
        color: var(--color-text);
        padding: 0 2vw;
      }
      .content {
        grid-column: 2 / -1;
        grid-row: 1 / 4;
        width: 50vw;
        height: 60vh;
        overflow-y: scroll;
      }
      .date,
      .page-description,
      .content {
        padding: 1vh 2vw;
      }
      .nav {
        grid-column: 1/2;
        width: 35%;
      }

      .page-description {
        grid-column: 1 / -1;
        width: 70%;
      }
      .profile-pic {
        height: 230px;
        width: 256px;
      }
      .stats {
        text-align: center;
      }
    </style>

    <style is:global>
      h1 {
        font-size: var(--font-size-xl);
      }

      h2 {
        font-size: var(--font-size-lg);
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      a {
        text-decoration: none;
        color: var(--color-text);
      }
      li:hover {
        animation: blink 0.7s infinite;
        width: 100%;
      }

      ul {
        list-style: none;
        padding: 0 20px;
      }

      @keyframes blink {
        from,
        to {
          background-color: transparent;
        }
        50% {
          background-color: #e32029;
        }
      }
    </style>
  </body>
</html>
