---
export interface Props {
  title: string
  body: string
  href: string
  thumb: string
}

const { href, title, body, thumb } = Astro.props
---

<li class="link-card">
  <a href={href}>
    <img src={thumb} alt={title} />
    <div class="card-details">
      <h3>
        {title}
      </h3>
      <p>
        {body}
      </p>
    </div>
  </a>
</li>

<style>
  h3 {
    margin: 0;
    padding: 0;
  }

  p {
    font-size: 0.8rem;
  }
  .link-card {
    margin-inline: 2vw;
    padding: 6vh 2vw;
  }
  .link-card a {
    display: block;
    color: var(--color-text);
    text-align: center;
    align-items: center;
  }
  img {
    height: 40vh;
    width: auto;
  }
  .card-details {
    display: none;
    z-index: 1;
    visibility: hidden;
  }
  .card-details:hover {
    display: block;
    visibility: visible;
    flex-flow: column;
    align-items: center;
    justify-content: center;
    background: darken;
  }
</style>
