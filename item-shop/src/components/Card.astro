---
const { href, title, thumb, gitLink } = Astro.props
---

<li class="link-card">
  <div class="project-box">
    <a href={href} target="_blank">
      <img src={thumb} alt={title} />
    </a>
  </div>
  <div class="gitlink">
    <a href={gitLink}><i class="fa-brands fa-github"></i> Code</a>
  </div>
</li>

<style>
  li:hover {
    animation: none;
  }
  h3 {
    margin: 0;
    padding: 0;
  }

  p {
    font-size: 0.8rem;
  }
  .project-box {
    margin-inline: 1vw;
    padding: 2vh 1.3vw 1.3vh;
    scroll-snap-align: start;
  }

  .project-box:hover {
    animation: blink 0.7s infinite;
  }
  .project-box a {
    color: var(--color-text);
    text-align: center;
    align-items: center;
  }

  .project-box a:hover {
    animation: none;
  }
  img {
    height: 40vh;
    width: auto;
    z-index: 0;
  }

  .gitlink {
    text-align: center;
    margin-bottom: 1vh;
  }

  .gitlink a {
    padding-inline: 2vw;
  }

  .gitlink a:hover {
    animation: blink 0.7s infinite;
  }
</style>
