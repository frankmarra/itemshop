---
import Layout from './Layout.astro'
const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title}>
  <div class="blog-wrapper">
    <h1>
      {frontmatter.title}
    </h1>
    <slot />
  </div>
</Layout>

<style>
  .blog-wrapper {
    border: 5px ridge #5fc3f9;
    box-shadow: 0 0 4px 3px rgba(252, 252, 252, 0.5);
    border-radius: 10px;
    background-color: rgb(80, 205, 255);
    grid-column: 2;
    font-size: 1.3rem;
  }
</style>

<style is:global>
  body {
    display: grid;
    grid-template-columns: 1fr 5fr 1fr;
    background-color: #002460;
    background-image: linear-gradient(to right, #d4eefb 3px, transparent 1px),
      linear-gradient(to bottom, #d4eefb 3px, transparent 1px);
    background-repeat: repeat;
    background-size: 5% 5%;
    background-position: -2.5%;
  }

  h1 {
    font-family: retroGaming;
  }
</style>
